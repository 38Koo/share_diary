datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  following Follower[] @relation("UserFollows")
  followers Follower[] @relation("UserFollowed")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Diaries   Diary[]
  accountId String     @unique
}

model Follower {
  id           Int      @default(autoincrement())
  user         User     @relation("UserFollows", fields: [userId], references: [id])
  userId       Int
  followedBy   User     @relation("UserFollowed", fields: [followedById], references: [id])
  followedById Int
  createdAt    DateTime @default(now())
  status       Status   @default(PENDING)

  @@id([userId, followedById])
}

enum Status {
  PENDING // フォロー承認待ち
  APPROVED // フォロー承認済み
}

model Diary {
  id       Int    @default(autoincrement())
  year     Int
  month    Int
  day      Int
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
  contents String

  @@id([year, month, day, userId])
}
